.page-wrapper
  transition: all 300ms ease-in-out
  width: 100vw
  height: 100vh
  position: relative
  overflow: hidden

.page-content
  transition: all 300ms ease-in-out
  height: 100%
  width: 100vw
  background: black
  overflow: auto
  flex-grow: 1
  position: relative

.mask
  position: absolute
  top: 0
  left: 0
  z-index: 1
  width: 100vw
  height: 100vh
  background: linear-gradient(rgba(0, 0, 0, .7) 65%, rgba(0, 0, 0, .6));

.header-wrapper
  height:10vh

.footer-wrapper
  height: 20vh
.filter-wrapper
  background-color: #111
  width: 27%
  height: 100%
