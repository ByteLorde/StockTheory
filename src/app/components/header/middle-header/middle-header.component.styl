.middle-header-container
  background-color: rgba(0, 0, 0, .7);
  background-color: #101010

  height: 50px
  border-bottom: 1px solid #222
  padding: 10px 7%

.header-icon
  padding: 0 5px
  font-size: 1.5em

.middle-header-link
  opacity: .5
  color: white
  padding: 2px 12px
  font-size: 1em
  transition: all 400ms ease-in-out
  display: flex
  align-items: center
  justify-content: center
  border-radius: 50px

  &:hover
    opacity: 1
    text-decoration: none

  &.selected
    opacity: 1
