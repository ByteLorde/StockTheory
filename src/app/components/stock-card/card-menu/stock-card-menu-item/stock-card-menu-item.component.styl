@import "../../../../../assets/styles/custom-colors.styl"

.stock-card-menu-button
  text-align: left
  background-color: $black-3
  height: 32px
  border: none
  margin: 3px 0
  font-weight: 700
  transition: all .2s ease-in-out

  &:enabled:hover
    background-color: $black-4

  &:enabled:focus
    box-shadow: none

  &:enabled:active
    transition: all .05s ease-in-out
    opacity: .7
    background-color: $black-2
    transform: scale(.98)

.overlay-content
  width: 300px
  overflow: hidden
  padding: 5px 10px

//app-stock-card-menu-item > button > span.ui-button-text.ui-clickable
::ng-deep button.stock-card-menu-button span.ui-button-text
  margin-left: 5px
  font-size: .95em

