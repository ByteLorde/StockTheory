.portal-container
  overflow: hidden

.portal-content
  transition: all 225ms ease-in-out
  overflow:hidden
  opacity: 1

  &.expanded
    animation: expand 225ms ease-in-out forwards

  &.collapsed
    animation: collapse 225ms 225ms ease-in-out forwards

.content-inner
  transition: all 225ms ease-in-out
  opacity: 1

  &.content-inner-right
    opacity: 0
    margin-left: -100%

    &.expanded
      animation: slide-from-left 225ms 225ms ease-in-out forwards

    &.collapsed
      animation: slide-to-left 225ms ease-in-out forwards


  &.content-inner-left
    animation: slide-from-right 225ms 225ms ease-in-out forwards


@keyframes slide-from-left {
  from {
    opacity: 0
    margin-left: -100%
  }
  to {
    opacity: 1
    margin-left: 0
  }
}

@keyframes slide-to-left {
  from {
    opacity: 1
    margin-left: 0
  }
  to {
    opacity: 0
    margin-left: -100%
  }
}

@keyframes slide-from-right {
  to {
      margin-right: 0
    }
}

@keyframes slide-to-right {
  to {
        margin-right: -100%
      }
}


@keyframes collapse {
  from {
    max-height: 50px
  }
  to {
    max-height:0
  }
}

@keyframes expand {

  from {
    max-height:0
  }
  to {
    max-height:50px
  }
}
