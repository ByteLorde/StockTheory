.mask
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  background-color: rgba(255, 255, 255, .1);
  //background: linear-gradient( rgba(255, 255, 255, .2) 0%, rgba(0, 0, 0, .2) 7% )
  background: linear-gradient(90deg, rgba(255, 255, 255, .9) 0%, rgba(0, 0, 0, .8) 40% )
  transition: opacity 4s ease-in-out
  animation: pulse 4s ease-in-out infinite

@keyframes pulse {
  0% {
    opacity: .7
  }
  50% {
    opacity: 1
  }
  100% {
    opacity: .7
  }
}
