.moodbar-light
  background-image: radial-gradient(rgba(90, 90, 90, .7), rgba(45, 45, 45, .3));
  width: 50px;
  height: 50px
  border-radius: 25px
  position: absolute

  transition: all 15000ms ease-in-out
  animation: fade 400ms ease-in-out infinite

  &:nth-child(1)
    width: 50px;
    height: 50px

  &:nth-child(2)
    width: 50px;
    min-height: 50px


@keyframes pulse {
  0% {
    opacity: .3
    width:50px
    height: 50px
  }
  50% {
    opacity: 1
    width: 80px
    height: 80px
  }
  99% {
    opacity: .3
    width:50px
    height: 50px
  }
}
