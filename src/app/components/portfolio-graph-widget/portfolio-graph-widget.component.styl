.portfolio-balance-label
  font-size: 2em
  font-weight: 600

.portfolio-widget-container
  border-bottom: 1px solid gray

.chart-interval-link
  color: white;

  transition: all 300ms ease-in
  padding-bottom: 10px;
  padding-top: 10px;
  margin-right: 15px
  cursor: pointer
  box-sizing: content-box

  font-size: 1em

  &:hover
    color: lawngreen

  &.selected
    color: lawngreen
    border-bottom: 2px solid lawngreen
