.hexagonal-pulsate-zoom-container
  display: flex
  flex-direction column
  justify-content: center
  align-items: center
  transition: all 350ms ease-in-out

.hexagonal-orbital
  width: 100%
  display flex
  justify-content center

.hexagon
  display: flex
  background-color: black
  position: relative
  justify-content: center
  align-items: center
  //transform: scale(1) rotate(90deg)

  transform: scale(0) rotate(0deg)

  transition: all 350ms ease-in-out
  -webkit-clip-path: polygon(25% 5%, 75% 5%, 100% 50%, 75% 95%, 25% 95%, 0% 50%);
  clip-path: polygon(25% 5%, 75% 5%, 100% 50%, 75% 95%, 25% 95%, 0% 50%);

.hexagon-mask
    width: 100%
    height: 100%
    background radial-gradient(black 20%, rgba(0,0,0,0) 80%, #111)
    z-index: 1
    position: absolute
    top: 0
    left: 0

@keyframes pulse-in-out {
  0% {
    //opacity: .9;
    transform: scale(0) rotate(0deg)
  }
  10% {

    transform: scale(1) rotate(90deg)
  }
  90% {
    //opacity: .9;
    //transform: scale(1) rotate(90deg)
    transform: scale(1) rotate(90deg)

  }

}

@keyframes fade-in-out {
  from {
    opacity: 0
  }
  to {
    opacity: 1
  }
}

@keyframes rotate {
  0% {
    opacity: .9;
    //transform:rotateY(0deg) rotateZ(45deg)
  }
  50% {
    opacity: .9
    //transform:rotateY(180deg) rotateZ(45deg)
  }
  100% {
    opacity: .9;
    //transform: rotateY(359deg) rotateZ(45deg)
  }
}
