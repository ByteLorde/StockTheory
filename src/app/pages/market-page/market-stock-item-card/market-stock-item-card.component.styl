@keyframes slide-in-right {
  from {
    opacity: 0;
    margin-left: 100%;
  }
  to {
    opacity: 1;
    margin-left: 0;
  }
}

@keyframes fade-in {
  from {
    position: relative
    opacity: 0
  }
  to {
    opacity: 1
  }
}
@keyframes rotate-and-fade-away {
  from {
    transform: rotate(0deg)
    opacity: 1
  }
  to {
    transform: rotate(-359deg);
    opacity: 0
  }
}

@keyframes rotate-and-fade-in {
  from {
    transform: rotate(359deg)
    opacity: 0
  }
  to {
    transform: rotate(0deg);
    opacity: 1
  }
}

@keyframes grow-in-right {
  from {
    width: 0
  }
  to {
    width: 50%
  }
}

