@import '../../../assets/styles/_base.styl'

.page
  padding-top: 1%


.filter-container
  padding-left: $global-margin

.page-content
  padding-left: 35px
  padding-right: $global-margin
  padding-top: 15px

.news-wrapper
  background-color rgba(0, 0, 0, .9)
  padding: 15px

.news-card-wrapper
  padding: 10px 0
  border-bottom: 1px solid rgba(90, 90, 90, .5);
  border-radius: 4px
  opacity: 0
  animation: fade-in 800ms 100ms ease-in-out forwards
  transition: border 300ms ease-in-out

  &:hover
    border-bottom: 1px solid rgba(90, 90, 90, 8);


@keyframes fade-in {
  from {
    opacity: 0
  }
  to {
    opacity: 1
  }
}

