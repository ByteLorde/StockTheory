body .ui-card
  background-color: $black-1;
  color: $gray-2;
  box-shadow: 0 1px 3px 0 rgba(200, 200, 200, 0.8), 0 1px 1px 0 rgba(200, 200, 200, 0.56), 0 2px 1px -1px rgba(200, 200, 200, 0.48);

body .ui-dialog
  background-color: $black-1;
  color: $gray-2;
  box-shadow: 0 -1px 5px rgba(150, 150, 150, .5);

body .ui-widget-overlay
  background-color: rgba(0,0,0,.8)

body .ui-dialog .ui-dialog-content
  background-color: $black-1
  color: white;
  height: 100%
  border: none
  background:
          radial-gradient(black 15%, transparent 32%) 0 0,
          radial-gradient(black 15%, transparent 32%) 8px 8px,
          radial-gradient(rgba(255,255,255,.1) 15%, transparent 20%) 0 1px,
          radial-gradient(rgba(255,255,255,.1) 15%, transparent 20%) 8px 9px;
  background-color:#111;
  background-size: 8px 8px;


body .ui-dialog .ui-dialog-footer
  background-color: $black-1
  border: none
  box-shadow: 0 -2px 10px rgba(240, 240, 240, 1);

body .ui-dialog .ui-dialog-titlebar
  background-color: $black-1
  border: none

::ng-deep .ui-widget-overlay .ui-dialog-mask
  overflow: scroll
