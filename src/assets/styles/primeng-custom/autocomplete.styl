body .auto-complete-dark .ui-inputtext
  font-size: 1em
  font-family: Roboto
  background: transparent
  color: white
  border: 1px solid rgba(255, 255, 255, .2);
  border-radius: 5px
  transition: all 300ms ease-in-out

  &::placeholder
    color: white
    opacity: .3
    font-weight: 800
    font-family: "Roboto Light"
    transition: all 300ms ease-in-out

//Activated state
body .auto-complete-dark .ui-inputtext

  &:focus, &:hover, &:active
    font-size: 1em
    font-family: Roboto
    //background-color: #888
    color: white
    border: 1px solid rgba(255, 255, 255, .5);
    border-radius: 5px
    //box-shadow: 0px 2px 2px #111;

    &::placeholder
      color: #999
      opacity: 1
